<% if (usuario && usuario.role === 'admin') { %>
    <%- include('partials/headerAdmin.ejs') %>
  <% } else if (usuario && usuario.role === 'operador') { %>
    <%- include('partials/headerOperador.ejs') %>
<% } %>
<div class="container mt-5">
    <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <%= error %>
        </div>
    <% } %>
    
    <h1 class="mb-4"><i class="fas fa-plus-circle"></i> Agregar Equipo</h1>

    <form action="/agregarEquipo" method="post" enctype="multipart/form-data" class="bg-light p-4 rounded shadow">
        <!-- Campo para el nombre del equipo -->
        <div class="mb-3">
            <label for="nombre" class="form-label"><i class="fas fa-tag"></i> Nombre:</label>
            <input type="text" id="nombre" name="nombre" class="form-control" required>
        </div>

        <!-- Campo para cargar la imagen del equipo -->
        <div class="mb-3">
            <label for="imagen" class="form-label"><i class="fas fa-image"></i> Imagen:</label>
            <input type="file" id="imagen" name="imagen" class="form-control">
        </div>

        <!-- Menú desplegable para seleccionar la categoría del equipo -->
        <div class="mb-3">
            <label for="categoria_id" class="form-label"><i class="fas fa-layer-group"></i> Categoría:</label>
            <select id="categoria_id" name="categoria_id" class="form-select" required>
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                <% }); %>
            </select>
        </div>

        <!-- Botón para enviar el formulario -->
        <div class="mb-3">
            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Agregar Equipo</button>
        </div>
    </form>
</div>
