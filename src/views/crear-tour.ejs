<% if (usuarioSesion && usuarioSesion.role === 'admin') { %>
    <%- include('partials/headerAdmin.ejs') %>
<% } else if (usuarioSesion && usuarioSesion.role === 'operador') { %>
    <%- include('partials/headerOperador.ejs') %>
<% } %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-route"></i> Crear Tour</h3>
                </div>
                <div class="card-body">
                    <form action="/crear-tour" method="post">

                        <div class="mb-3">
                            <label for="nombre">Nombre del tour</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="nombre" value="Sky Trek" >
                                <label for="">Sky Trek</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="nombre" value="Sky Limit">
                                <label for="">Sky Limit</label>
                            </div>

                            <label class="form-label"><i class="fas fa-calendar-alt"></i> Fecha del Tour</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="opcionFecha" id="opcionEspecifica" value="especifica" >
                                <label class="form-check-label" for="opcionEspecifica">
                                    Fecha específica
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="opcionFecha" id="opcionRepetir" value="repetir" checked>
                                <label class="form-check-label" for="opcionRepetir">
                                    Repetir todos los días
                                </label>
                            </div>
                            <input type="date" class="form-control mt-2" id="fecha" name="fecha" required>
                        </div>
                        <div class="mb-3">
                            <label for="horaInicio" class="form-label"><i class="fas fa-clock"></i> Hora de Inicio</label>
                            <input type="time" class="form-control" id="horaInicio" name="horaInicio" required>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-plus"></i> Crear Tour</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
        
<!-- Importando el JS de Bootstrap y jQuery -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Script para mostrar/ocultar el input de fecha según la opción seleccionada
    document.addEventListener("DOMContentLoaded", () => {
        // Deshabilitar campo de fecha al cargar la página
        $('#fecha').prop('disabled', true);

        // Manejar el cambio de opciones
        $('input[name="opcionFecha"]').on('change', function() {
            if ($('#opcionRepetir').is(':checked')) {
                $('#fecha').prop('disabled', true);
            } else {
                $('#fecha').prop('disabled', false);
            }
        });
    });
    

    
</script>

</body>

</html>
