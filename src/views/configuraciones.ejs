<% if (usuario && usuario.role === 'admin') { %>
    <%- include('partials/headerAdmin.ejs') %>
<% } else if (usuario && usuario.role === 'operador') { %>
    <%- include('partials/headerOperador.ejs') %>
<% } %>




<div class="container mt-5">
    <h2 class="mb-4">Dashboard de Configuraciones</h2>

    <div class="row">
        <!-- Crear horarios de tour -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-route fa-3x mb-3"></i>
                    <h5 class="card-title">Horarios de Tour</h5>
                    <p class="card-text">Crea y gestiona los horarios de los tours.</p>
                    <a href="/crear-horario" class="btn btn-primary">Ir a Horarios</a>
                </div>
            </div>
        </div>

        <!-- Crear usuarios -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5 class="card-title">Usuarios</h5>
                    <p class="card-text">Administra los usuarios y asigna roles.</p>
                    <a href="/crear-usuario" class="btn btn-primary">Ir a Usuarios</a>
                </div>
            </div>
        </div>

        <!-- Crear productos -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-3x mb-3"></i>
                    <h5 class="card-title">Productos</h5>
                    <p class="card-text">Añade y gestiona productos disponibles.</p>
                    <a href="/crear-producto" class="btn btn-primary">Ir a Productos</a>
                </div>
            </div>
        </div>
    </div>

    <!-- ... Puedes agregar más secciones según lo necesites ... -->

</div>