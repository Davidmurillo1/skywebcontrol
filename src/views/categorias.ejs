<% if (usuarioSesion && usuarioSesion.role === 'admin') { %>
    <%- include('partials/headerAdmin.ejs') %>
<% } else if (usuarioSesion && usuarioSesion.role === 'operador') { %>
    <%- include('partials/headerOperador.ejs') %>
<% } %>


<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-9">
        <div style="max-width: 80rem;">
            <div class="card border-light mb-3">
                <div class="card-body">
    
                    <form id="deleteForm" action="/eliminar-categoria" method="POST" style="display: none;">
                        <input type="hidden" name="categoria" id="categoriaToDelete">
                    </form>
    
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Editar</th>
                                <th scope="col">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categorias.forEach(categoria => { %>
                                <tr>
                                    <td><%= categoria.nombre %></td>
                                    <td><%= categoria.descripcion %></td>
                                    <td style="width: 5rem;">
                                        <a href="#" onclick="confirmEditCategory('<%= categoria.id %>'); return false;" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>                       
                                    </td>
                                    <td style="width: 5rem;">
                                        <a href="#" class="btn btn-outline-danger btn-sm" onclick="confirmDelete('<%= categoria.id %>'); return false;">
                                            <i class="fas fa-trash-alt"></i> Eliminar
                                        </a> 
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
              </div>
        </div> 
    </div>
    <div class="col-md-3" style="padding-left: 15px;">
        <div class="row">
            <div class="">
                    <a href="/crear-categoria" class="btn btn-outline-primary"> Crear Categoría</a>
            </div>
        </div>
    </div>
     
</div>


<script>
    function submitDeleteForm(categoria) {
        // Establece el valor del campo oculto con el nombre de usuario
        document.getElementById('categoriaToDelete').value = categoria;
        // Envía el formulario
        document.getElementById('deleteForm').submit();
    }

    function confirmDelete(categoria) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "Esta acción no se puede deshacer.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '¡Sí, bórralo!',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                // Si el usuario confirma, envía el formulario
                document.getElementById('categoriaToDelete').value = categoria;
                document.getElementById('deleteForm').submit();
            }
        })
    }

    function confirmEditCategory(categoria) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "Esta acción editará la categoría.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '¡Sí, edítalo!',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/editar-categoria/${categoria}`;
            }
            })
    }
</script>