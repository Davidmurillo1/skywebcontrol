<% if (usuarioSesion && usuarioSesion.role === 'admin') { %>
    <%- include('partials/headerAdmin.ejs') %>
<% } else if (usuarioSesion && usuarioSesion.role === 'operador') { %>
    <%- include('partials/headerOperador.ejs') %>
<% } %>




<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-user-edit"></i> Editar Usuario</h3>
                </div>
                <div class="card-body">
                    <form action="/editar-usuario/<%= usuario.usuario %>" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label"><i class="fas fa-user"></i> Nombre de Usuario</label>
                            <input type="text" class="form-control" id="username" name="usuario" value="<%= usuario.usuario %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="nombre" class="form-label"><i class="fas fa-signature"></i> Nombre Completo</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= usuario.nombre %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="telefono" class="form-label"><i class="fas fa-phone"></i> Tel√©fono</label>
                            <input type="tel" class="form-control" id="telefono" name="tel" value="<%= usuario.tel %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="rol" class="form-label"><i class="fas fa-user-tag"></i>Role: <%= usuario.rol %></label>
                            <select class="form-control" id="rol" name="rol">
                                <option value="admin" selected>admin</option>
                                <option value="operador">operador</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-warning btn-block"><i class="fas fa-user-edit"></i> Guardar Cambios</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>