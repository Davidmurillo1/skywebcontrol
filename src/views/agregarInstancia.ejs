<% if (usuarioSesion && usuarioSesion.role === 'admin') { %> <%-
include('partials/headerAdmin.ejs') %> <% } else if (usuarioSesion &&
usuarioSesion.role === 'operador') { %> <%-
include('partials/headerOperador.ejs') %> <% } %>

<div class="container mt-5" style="max-width: 40rem">
  <% if (messages.error && messages.error.length > 0) { %>
  <div class="alert alert-danger" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <%= messages.error[0] %>
  </div>
  <% } %>

  <h1 class="mb-4">
    <i class="fas fa-plus-circle"></i> Agregar Nueva Unidad de: <%=
    equipo.nombre %>
  </h1>

  <form
    action="/registrar-instancia/<%= equipo.id %>"
    method="post"
    class="bg-light p-4 rounded shadow"
  >
    <!-- Campo para numero del equipo -->
    <div class="mb-3">
      <label for="numeroRegistro" class="form-label"
        ><i class="fas fa-hashtag"></i> Número:</label
      >
      <input
        type="number"
        id="numeroRegistro"
        name="numeroRegistro"
        value="0"
        class="form-control"
      />
    </div>

    <!-- Campo para el estado del equipo -->
    <div class="mb-3">
      <input
        type="text"
        id="estado"
        name="estado"
        class="form-control"
        value="disponible"
        required
        style="display: none"
      />
    </div>

    <!-- Campo para categoria del equipo -->
    <div class="mb-3">
      <input
        type="text"
        id="categoria"
        name="categoria"
        class="form-control"
        value="<%= equipo.categoria_id %>"
        required
        style="display: none"
      />
    </div>

    <!-- Campo para la fecha de registro del equipo -->
    <div class="mb-3">
      <label for="fechaIngreso" class="form-label"
        ><i class="fa-regular fa-calendar"></i> Fecha Ingreso:</label
      >
      <input
        type="date"
        id="fechaIngreso"
        name="fechaIngreso"
        class="form-control"
      />
    </div>

    <!-- Campo para el valor del equipo -->
    <div class="form-group">
      <label class="form-label">Valor</label>
      <div class="form-group">
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            type="number"
            name="valor"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
          />
        </div>
      </div>
    </div>

    <!-- Botón para enviar el formulario -->
    <div class="mb-3">
      <button type="submit" class="btn btn-outline-success">
        <i class="fas fa-check"></i> Agregar Nueva Unidad
      </button>
    </div>
  </form>
</div>
